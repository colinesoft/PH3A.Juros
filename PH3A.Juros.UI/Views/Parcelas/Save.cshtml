@model PH3A.Juros.UI.Models.Parcela
@{ 
    var dataVenc = Model.DataVencto == DateTime.MinValue ? "" : string.Format("{0:yyyy-MM-dd}", Model.DataVencto);
    string vlr = Model.Valor == 0 ? "" : Model.Valor.ToString();
}
<h1>Nova Parcela</h1>

<form method="post">
    <div class="form-group">
        <label>Data Vencimento:</label>
        <input class="form-control" type="date" name="DataVencto" value="@dataVenc" min="1" required autofocus />
    </div>
    <div class="form-group">
        <label>Valor:</label>
        <input class="form-control" type="text" name="Valor" value="@vlr" required />
    </div>
    <div class="form-group">
        <input class="btn btn-sm btn-outline-success" type="submit" value="Salvar" />
        <a class="btn btn-sm btn-outline-secondary" href="~/Parcelas">Cancelar</a>
    </div>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        document.querySelector("form").addEventListener('submit', (event) => {
            CarregaGrid();
        });
    });

</script>